# run or raise emacs
cmd - i : open -a Emacs
# emacsclient has some issues (e.g. PATH incorrect, no rg); not much benefit on
# OSX, so not using for now

# emacs anywhere
cmd + shift - i : ~/.emacs_anywhere/bin/run

# open terminal
# cmd - return : /Applications/Kitty.app/Contents/MacOS/kitty --single-instance -d ~
cmd - return : open -a Kitty --args --single-instance --directory ~

cmd + shift - return : open -a "Google Chrome"

cmd + alt - e : open -a "Microsoft Outlook"

cmd + alt - t : open -a "Microsoft Teams"

# open qutebrowser
